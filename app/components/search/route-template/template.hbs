<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-4">
      <div class="row">
        <div class="col">
          {{search/search-form
            searchQuery=(readonly searchQuery)
            onFormSubmit=(action "performSearch")
          }}
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{search/selected-properties
            properties=selectedProperties
          }}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      {{search/property-types
        propertyTypes=propertyTypes
        onChangeTypeSelection=(action "onChangeTypeSelection")
      }}
    </div>
    <div class="col-md-8">
      {{search/search-results
        properties=computedPropertyList
        loading=loading
        onChangePropertySelection=(action "onChangePropertySelection")
      }}
    </div>
  </div>
</div>
